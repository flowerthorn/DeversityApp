<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BBBBBB" />

        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_tab_home_selector"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/main_tab_color_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_tab_news_selector"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/main_tab_color_selector"
                android:textSize="12sp"
                android:visibility="visible" />


            <RadioButton
                android:id="@+id/rb_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_tab_task_selector"
                android:gravity="center"
                android:text="任务"
                android:textColor="@color/main_tab_color_selector"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:button="@null"
                android:drawablePadding="1dp"
                android:drawableTop="@drawable/main_tab_user_selector"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/main_tab_color_selector"
                android:textSize="12sp" />

        </RadioGroup>
    </LinearLayout>
</RelativeLayout>